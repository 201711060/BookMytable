<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_view_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.innovation.com.project.food_categories">


    <ImageView
        android:id="@+id/ivImage_grid_design"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:layout_margin="2dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvTitle_grid_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:padding="2dp"
        android:layout_below="@+id/ivImage_grid_design"
        android:layout_alignRight="@+id/ivImage_grid_design"
        android:layout_alignEnd="@+id/ivImage_grid_design"
        android:layout_alignLeft="@+id/ivImage_grid_design"
        android:layout_alignStart="@+id/ivImage_grid_design" />

</RelativeLayout>
